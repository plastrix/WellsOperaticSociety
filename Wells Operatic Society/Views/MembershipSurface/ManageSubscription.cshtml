                        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                data-key="@WellsOperaticSociety.Web.SensativeInformation.StripeKeys.PublishableKey"
                                data-amount="@Model.PatronPrice.Replace(".","")"
                                data-name="Wells Little Theatre"
                                data-description="Patron"
                                data-image="/images/stripeIcon.png"
                                data-locale="auto"
                                data-zip-code="true"
                                data-currency="gbp">


                        </script>
                    }
                }
            </div>
        </div> <!-- end card -->
    </div>
</div>