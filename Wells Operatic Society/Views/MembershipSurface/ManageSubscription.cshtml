@inherits Umbraco.Web.Mvc.UmbracoViewPage<WellsOperaticSociety.Web.Models.ManageSubscriptionViewModel>
<div class="row">
    <div class="col-md-4">
        <div class="card card-price">
            <div class="content">
                <h6 class="category">Social Member</h6>
                <h1 class="price">
                    <small>£</small>@Model.SocialPrice
                </h1>
                <ul class="list-unstyled list-lines">
                    <li>
                        <i class="fa fa-comments"></i> <b>10,000</b> Messages
                    </li>
                    <li>
                        <i class="fa fa-magic"></i> <b>500+</b> Elements
                    </li>
                    <li>
                        <i class="fa fa-male"></i> <b>250</b> Users
                    </li>
                    <li>
                        <i class="fa fa-level-up"></i> <b>Free</b> Updates
                    </li>
                </ul>
            </div>
            <div class="footer">
                @if (Model.IsSocialMember)
                {
                    <button type="button" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok" aria-hidden="true">&nbsp;</span>You are subscribed!</button>
                }
                else
                {
                    <button type="button" class="btn btn-info btn-block">Buy now!</button>
                }
            </div>
        </div> <!-- end card -->
    </div>
    <div class="col-md-4">
        <div class="card card-price card-price-best-deal">
            <div class="content">
                <h6 class="category">Ordinary Member</h6>
                <h1 class="price">
                    <small>£</small>@Model.OrdinaryPrice
                </h1>
                <ul class="list-unstyled list-lines">
                    <li>
                        <i class="fa fa-comments"></i> <b>Unlimited</b> Messages
                    </li>
                    <li>
                        <i class="fa fa-magic"></i> <b>Unlimited</b> Elements
                    </li>
                    <li>
                        <i class="fa fa-male"></i> <b>Unlimited</b> Users
                    </li>
                    <li>
                        <i class="fa fa-dollar"></i> <b>Best Price</b> Deal
                    </li>
                    <li>
                        <i class="fa fa-level-up"></i> <b>Free</b> Updates
                    </li>
                    <li>
                        <i class="fa fa-phone"></i> <b>Premium</b> Support
                    </li>
                </ul>
            </div>
            <div class="footer">
                @if (Model.IsOrdinaryMember)
                {
                    <button type="button" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok" aria-hidden="true">&nbsp;</span>You are subscribed!</button>
                }
                else
                {
                    <button type="button" class="btn btn-info btn-block">Buy now!</button>
                }
            </div>
        </div> <!-- end card -->
    </div>

    <div class="col-md-4">
        <div class="card card-price">
            <div class="content">
                <h6 class="category">Patron</h6>
                <h1 class="price">
                    <small>£</small>@Model.PatronPrice
                </h1>
                <ul class="list-unstyled list-lines">
                    <li>
                        <i class="fa fa-comments"></i> <b>10,000</b> Messages
                    </li>
                    <li>
                        <i class="fa fa-magic"></i> <b>500+</b> Elements
                    </li>
                    <li>
                        <i class="fa fa-male"></i> <b>250</b> Users
                    </li>
                    <li>
                        <i class="fa fa-level-up"></i> <b>Free</b> Updates
                    </li>
                </ul>
            </div>
            <div class="footer">
                @if (Model.IsPatron)
                {
                    <button type="button" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok" aria-hidden="true">&nbsp;</span>You are subscribed!</button>
                }
                else
                {
                    <button type="button" class="btn btn-info btn-block">Buy now!</button>
                }
            </div>
        </div> <!-- end card -->
    </div>
</div>

<h2>Membership History</h2>
@if (Model.Memberships != null && Model.Memberships.Any())
{
    <table class="table table-hover">
        <thead>
            <tr><th>Membership Id</th><th>Start</th><th>End</th><th>Membership Type</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var membership in Model.Memberships)
                {
                <tr>
                    <td>@membership.MembershipId</td>
                    <td>@membership.StartDate</td>
                    <td>@membership.EndDate</td>
                    <td>@membership.MembershipTypeName</td>
                    <td><a href="#" class="btn btn-default">Manage Membership</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-info">You havent subscribed yet</p>
}