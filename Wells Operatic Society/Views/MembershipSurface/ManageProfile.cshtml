@inherits Umbraco.Web.Mvc.UmbracoViewPage<WellsOperaticSociety.Models.MemberModels.Member>

<h2>Update your profile</h2>
@using (Html.BeginUmbracoForm("SubmitManageProfileForm", "MembershipSurface"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.Id)
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Name) })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Email) })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TelephoneNumber)
        @Html.TextBoxFor(m => m.TelephoneNumber, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.TelephoneNumber) })
        @Html.ValidationMessageFor(m => m.TelephoneNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MobileNumber)
        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.MobileNumber) })
        @Html.ValidationMessageFor(m => m.MobileNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:d}", new {@class = "form-control", placeholder = Html.DisplayNameFor(n => n.DateOfBirth)})
        @Html.ValidationMessageFor(m => m.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VehicleRegistration1)
        @Html.TextBoxFor(m => m.VehicleRegistration1, new {@class = "form-control", placeholder = Html.DisplayNameFor(n => n.VehicleRegistration1) })
        @Html.ValidationMessageFor(m => m.VehicleRegistration1)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VehicleRegistration2)
        @Html.TextBoxFor(m => m.VehicleRegistration2, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.VehicleRegistration2) })
        @Html.ValidationMessageFor(m => m.VehicleRegistration2)
    </div>
    <button type="submit" class="btn btn-default">Update Information</button>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#DateOfBirth").datepicker({ dateFormat: "dd/mm/yy" });
        //date work around
        $.validator.addMethod('date',
            function (value, element, params) {
                if (this.optional(element)) {
                    return true;
                }

                var ok = true;
                try {
                    $.datepicker.parseDate('dd/mm/yy', value);
                }
                catch (err) {
                    ok = false;
                }
                return ok;
            });
    });
</script>