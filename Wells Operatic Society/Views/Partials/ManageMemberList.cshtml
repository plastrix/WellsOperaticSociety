@using WellsOperaticSociety.BusinessLogic
@model IEnumerable<IMember>
@{
    var dm = new DataManager();
    var editMemberUrl = dm.GetEditMemberAdminNode().Url;
    var previousShowsUrl = dm.GetPreviousShowsNode().Url;
    }
<div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr><th class="hidden-xs">Member Id</th><th>Member Name</th><th>Member Email</th><th></th></tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                {
                        <tr>
                            <td class="hidden-xs">@member.Id</td>
                            <td>@member.Name</td>
                            <td>@member.Email</td>
                            @*//TODO:change this away from being a hard coded value*@
                            <td><a href="@editMemberUrl?id=@member.Id" class="btn btn-default">Edit</a> <a href="@previousShowsUrl?uid=@member.Id" class="btn btn-info">View Shows</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Could not find the member you were looking for</div>
    }
</div>