@model WellsOperaticSociety.Models.MemberModels.ForgotPassword

@using (Html.BeginUmbracoForm("SubmitForgotPasswordForm", "MembershipSurface"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => Model.Email, new {@class = "sr-only"})
        @Html.TextBoxFor(m => Model.Email, new {@class = "form-control", placeholder = Html.DisplayNameFor(n => n.Email)})
        @Html.ValidationMessageFor(m => Model.Email)
    </div>

    <button type="submit" class="btn btn-default">Request password reset</button>
}