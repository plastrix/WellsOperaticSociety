@using WellsOperaticSociety.BusinessLogic
@{
    var dm = new DataManager();
    var membershipReportUrl = dm.GetMembershipReportNode().Url;
}
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Vehicle registration list</h3>
        </div>
        <div class="panel-body">
            <p>Print a list of active member registration numbers. That are pulled from the member record.</p>
            <a href="@Url.Action("VehicleRegistrationReport", "AdminSurface")" class="btn btn-info btn-fill"><i class="fa fa-car"></i> Print</a>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Long service awards</h3>
        </div>
        <div class="panel-body">
            <p>Print a list of all of the upcoming and overdue long service awards. These can be managed in the admin -> manage long service award section</p>
            <a href="@Url.Action("LongServiceReport", "AdminSurface")" class="btn btn-info btn-fill"><i class="pe-7s-medal"></i> Print</a>
        </div>
    </div>
</div>

<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Membership reports</h3>
        </div>
        <div class="panel-body">
            <p>Customise a report of our membership</p>
            <a href="@membershipReportUrl" class="btn btn-info btn-fill"><i class="pe-7s-medal"></i> Next</a>
        </div>
    </div>
</div>