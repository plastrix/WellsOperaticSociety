@using WellsOperaticSociety.Models.ReportModels
@model VehicleRgeistrationViewModel
@{
    //TODO: ADD in page header for styling
    var subList = new List<List<VehicleRegistrationModel>>();
    var breakPoint = 40;
    if (Model.RegistrationList != null && Model.RegistrationList.Any())
    {
        var chunkCount = Model.RegistrationList.Count() / breakPoint;

        if (Model.RegistrationList.Count % breakPoint > 0)
        {
            chunkCount++;
        }

        for (var i = 0; i < chunkCount; i++)
        {
            subList.Add(Model.RegistrationList.Skip(i * breakPoint).Take(breakPoint).ToList());
        }
    }
}

<html>
<head>
    <style type="text/css">
        table {
            border-collapse: collapse;
            display: inline-block;
            width: 33%;
        }
        table, th, td {
            border: 1px solid;
        }    
        .title {
            text-align: center;
        }

        .title p {
            font-size: 0.8rem;
            color: #a9a9a9
        }
</style>
</head>
<body>
    @Html.Partial("~/Views/Reports/ReportHeader.cshtml", new ViewDataDictionary { { "baseUri", Model.BaseUri } })
<div class="title">
    <h2>Vehicle Registrations</h2>
    <p>As of @DateTime.Now.ToString("D")</p>
</div>
    @if (subList.Any())
    {

        foreach (var list in subList)
        {
            <table>
                <thead>
                <tr>
                    <th>Registration</th>
                    <th>Owner</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var record in list)
                    {
                        <tr>
                            <td>@record.Registration</td>
                            <td>@record.Member.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</body>
</html>