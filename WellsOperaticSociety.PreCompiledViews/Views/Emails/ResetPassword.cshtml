@model WellsOperaticSociety.Models.EmailModels.ResetPassword

<html>
<head>
@Html.Partial("~/Views/Emails/EmailStyling.cshtml")
</head>
<body>
@Html.Partial("~/Views/Emails/EmailHeader.cshtml", new ViewDataDictionary { { "baseUri", Model.BaseUri }})
<p>
    Hi @Model.Member.Name,
</p>
<p>
    You have requested to reset your password. Please use the link below to reset your password.
</p>
<p><a href="@Model.Link">@Model.Link</a>
</p>
<p>If you did not request to reset your password just ignore this email.</p>
<p>
    Wells Operatic Society
</p>
    @Html.Partial("~/Views/Emails/EmailFooter.cshtml")
</body>
</html>